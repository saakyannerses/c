#include <stdio.h>
#include <stdlib.h>
#include <time.h>

int main() {
    // Инициализация генератора случайных чисел
    srand(time(NULL));

    // a) Вещественные значения в диапазоне от 0 до 1
    float arr_a[10];
    for (int i = 0; i < 10; i++) {
        arr_a[i] = (float)rand() / RAND_MAX;
    }

    // б) Вещественные значения x (22 < x < 23)
    float arr_b[10];
    for (int i = 0; i < 10; i++) {
        arr_b[i] = 22.0 + (float)rand() / (RAND_MAX / 1.0);
    }

    // в) Вещественные значения x (0 <= x < 10)
    float arr_c[10];
    for (int i = 0; i < 10; i++) {
        arr_c[i] = (float)rand() / (RAND_MAX / 10.0);
    }

    // г) Вещественные значения x (-50 <= x < 50)
    float arr_g[10];
    for (int i = 0; i < 10; i++) {
        arr_g[i] = -50.0 + (float)rand() / (RAND_MAX / 100.0);
    }

    // д) Целые значения в диапазоне от 1 до 10 включительно
    int arr_d[10];
    for (int i = 0; i < 10; i++) {
        arr_d[i] = rand() % 10 + 1;
    }

    // Вывод заполненных массивов
    printf("a) Вещественные значения в диапазоне от 0 до 1:\n");
    for (int i = 0; i < 10; i++) {
        printf("%.2f ", arr_a[i]);
    }
    printf("\n\n");

    printf("б) Вещественные значения x (22 < x < 23):\n");
    for (int i = 0; i < 10; i++) {
        printf("%.2f ", arr_b[i]);
    }
    printf("\n\n");

    printf("в) Вещественные значения x (0 <= x < 10):\n");
    for (int i = 0; i < 10; i++) {
        printf("%.2f ", arr_c[i]);
    }
    printf("\n\n");

    printf("г) Вещественные значения x (-50 <= x < 50):\n");
    for (int i = 0; i < 10; i++) {
        printf("%.2f ", arr_g[i]);
    }
    printf("\n\n");

    printf("д) Целые значения в диапазоне от 1 до 10 включительно:\n");
    for (int i = 0; i < 10; i++) {
        printf("%d ", arr_d[i]);
    }
    printf("\n");

    return 0;
}
